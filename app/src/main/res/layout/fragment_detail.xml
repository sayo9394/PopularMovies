<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <me.grantland.widget.AutofitTextView
            android:layout_width="fill_parent"
            android:layout_height="158dp"
            android:id="@+id/titleTextView"
            android:background="#009587"
            android:textColor="#ffffff"
            android:singleLine="false"
            android:maxLines="2"
            android:textSize="40sp"
            autofit:minTextSize="16sp"
            android:gravity="center_vertical"
            android:paddingLeft="32dp" />

        <ImageView
            android:layout_width="144dp"
            android:layout_height="215dp"
            android:id="@+id/posterImageView"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="27dp"
            android:layout_below="@+id/titleTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/yearOfReleaseTextView"
            android:layout_marginLeft="54dp"
            android:layout_marginStart="54dp"
            android:textSize="30sp"
            android:layout_alignTop="@+id/posterImageView"
            android:layout_toRightOf="@+id/posterImageView"
            android:layout_toEndOf="@+id/posterImageView"
            android:layout_marginTop="21dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/durationTextView"
            android:layout_below="@+id/yearOfReleaseTextView"
            android:layout_alignLeft="@+id/yearOfReleaseTextView"
            android:layout_alignStart="@+id/yearOfReleaseTextView"
            android:layout_marginTop="17dp"
            android:textStyle="bold|italic"
            android:textSize="25sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/overviewTextView"
            android:layout_below="@+id/posterImageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="18.5dp"
            android:layout_marginRight="18.5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/ratingsTextView"
            android:layout_below="@+id/durationTextView"
            android:layout_alignLeft="@+id/durationTextView"
            android:layout_alignStart="@+id/durationTextView"
            android:layout_marginTop="21dp"
            android:textColor="#000000" />

    </RelativeLayout>
</ScrollView>
